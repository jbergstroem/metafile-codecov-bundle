{
	"$schema": "https://unpkg.com/knip@5/schema.json",
	"workspaces": {
		"packages/metafile-codecov": {
			"entry": ["index.ts!", "src/cli.ts!", "src/**/*.test.ts!"],
			"project": ["**/*.ts"]
		},
		"examples/react-app": {
			"entry": ["src/index.tsx!"],
			"project": ["**/*.{ts,tsx}"]
		},
		"examples/esbuild-app": {
			"project": ["**/*.ts"]
		},
		"examples/shared": {
			"entry": ["verify.ts!"],
			"project": ["**/*.ts"]
		}
	},
	"ignore": ["**/dist/**"],
	"ignoreExportsUsedInFile": true
}
