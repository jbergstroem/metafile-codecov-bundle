{
	"private": true,
	"workspaces": [
		"packages/*",
		"examples/*"
	],
	"scripts": {
		"build": "bun run --filter '*' build",
		"lint": "oxlint --import-plugin --tsconfig=packages/metafile-codecov/tsconfig.json && oxfmt --check",
		"lint:fix": "oxlint --fix --import-plugin --tsconfig=packages/metafile-codecov/tsconfig.json && oxfmt",
		"knip": "knip",
		"test": "bun run --filter '*' test",
		"typecheck": "bun run --filter '*' typecheck"
	},
	"devDependencies": {
		"knip": "5.83.0",
		"oxfmt": "catalog:",
		"oxlint": "catalog:"
	},
	"packageManager": "bun@1.3.8",
	"catalog": {
		"@types/bun": "1.3.8",
		"oxfmt": "0.28.0",
		"oxlint": "1.43.0",
		"typescript": "5.9.3"
	}
}
